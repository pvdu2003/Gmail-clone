<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
<% if(typeof lists === 'undefined') lists ={}; %>
<% if(typeof err === 'undefined')err = {};%>
<% if(typeof user === 'undefined') user = {}; %>

  <body>
    <%- include('../partials/header') %>
    <div id="container">
      <%- include('../partials/menu') %>
      <div class="compose-container">
        <form
          action="/compose"
          method="post"
          class="form"
          enctype="multipart/form-data">
          <h1 class="heading">Send Email</h1>
          <div class="form-group">
            <label class="form-label" for="recipient">Recipient:</label>
            <select class="form-control" id="recipient" name="recipient">
              <option value="">--Select Recipient--</option>
              <% lists.forEach(function(list) { %>
              <option value="<%= list.id %>"><%=list.fullname%></option>
              <% }); %>
            </select>
            <div class="err"><%=err.recipient%></div>
          </div>
          <div class="form-group">
            <label for="subject" class="form-label">Subject:</label>
            <input
              class="form-control"
              type="text"
              id="subject"
              name="subject"/>
            
          </div>
          <div class="form-group">
            <label for="body" class="form-label">Body:</label>
            <textarea class="form-control" id="body" name="body"></textarea>
          </div>
          <div class="form-group">
            <label for="attachment" class="form-label">Attachment:</label>
            <input
              class="form-control"
              type="file"
              id="attachment"
              name="attachment"
              multiple/>
            
          </div>
          <button class="form-submit" type="submit">Send</button>
        </form>
      </div>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
