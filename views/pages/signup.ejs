<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <% if (typeof err === 'undefined') err = {};%>
  <% if (typeof params ==='undefined') params = {}; %>
  <body>
    <div class="main">
      <form action="/signUp" method="post" class="form" id="sign-up">
        <h2 class="heading">Sign up your email</h2>
        <div class="form-group">
          <label for="name" class="form-label">Full name</label>
          <input
            class="form-control"
            id="name"
            type="text"
            name="fname"
            placeholder="Enter your full name"
          />
          <div class="err"><%=err.fname%></div>
        </div>
        <div class="form-group">
          <label for="email" class="form-label">Email</label>
          <input
            class="form-control"
            id="email"
            type="text"
            name="email"
            placeholder="Enter your mail"
          />
          <div class="err"><%=err.email%></div>
        </div>
        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <input
            class="form-control"
            id="password"
            type="password"
            name="password"
            placeholder="Enter password"
          />
          <div class="err"><%=err.password%></div>
        </div>
        <div class="form-group">
          <label for="confirm_password" class="form-label"
            >Confirm password</label>
          <input
            class="form-control"
            id="confirm_password"
            type="password"
            name="confirmPw"
            placeholder="Confirm password"
          />
          <div class="err"><%=err.confirmPw%></div>
        </div>
        <button
          class="form-submit"
          type="submit"
          name="formType"
          value="sign-up">
          Sign up
        </button>
        <button
          class="form-other"
          type="submit"
          name="formType"
          value="sign-in">
          Sign in
        </button>
      </form>
    </div>
  </body>
</html>
