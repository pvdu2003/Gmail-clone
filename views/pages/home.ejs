<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <% if (typeof err === 'undefined') err = {}; %>

  <body>
    <div class="main">
      <form action="" method="post" class="form" id="sign-in">
        <h2 class="heading">Sign in your email</h2>
        <div class="err-heading"><%=err.overall%></div>

        <div class="form-group">
          <label for="email" class="form-label">Email</label>
          <input
            class="form-control"
            id="email"
            type="text"
            name="email"
            placeholder="Enter your mail"
          />
          <div class="err"><%=err.email%></div>
        </div>
        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <input
            class="form-control"
            id="password"
            type="password"
            name="password"
            placeholder="Enter password"
          />
          <div class="err"><%=err.password%></div>
        </div>
        <button
          class="form-submit"
          type="submit"
          name="formType"
          value="sign-in"
        >
          Sign in
        </button>
        <button
          class="form-other"
          type="submit"
          name="formType"
          value="sign-up"
        >
          Sign up
        </button>
      </form>
    </div>
  </body>
</html>
