<meta charset="UTF-8" />
<title>Gmail Clone</title>
<style>
  :root {
    --primary-color: #1dbfaf;
    --white-color: #fff;
    --black-color: #000;
    --gray-color: #ccc;
    --background-color: #f1f1f1ff;
    --background-color-hover: #64bdb4;
  }
  * {
    box-sizing: inherit;
    padding: 0;
    margin: 0;
  }

  html {
    font-size: 62.5%;
    line-height: 1.6rem;
    font-family: Arial, Helvetica, sans-serif;
    box-sizing: border-box;
  }

  .main {
    background-color: #f1f1f1;
    height: 100vh;
    display: flex;
    justify-content: center;
  }
  #sign-up {
    height: 65vh;
  }
  .form {
    background-color: var(--white-color);
    width: 450px;
    height: 46%;
    max-height: 65%;
    padding: 15px 24px;
    margin: auto;
    align-items: center;
    text-align: center;
    border-radius: 2px;
    box-shadow: 0 2px 5px 0 rgba(51, 62, 73, 0.2);
  }
  .form .heading {
    font-size: 2rem;
    padding: 1.5rem;
  }
  .form-group {
    display: flex;
    flex-direction: column;
  }
  .err-heading {
    color: red;
    font-size: 1.5rem;
  }
  .err {
    color: red;
    font-size: 1rem;
    left: 0;
    align-self: flex-start;
    height: 1rem;
  }
  .form-label {
    font-size: 1.2rem;
    font-weight: 600;
    margin: 1rem auto 0.3rem 0;
  }
  .form-control {
    height: 30px;
    font-size: 1.2rem;
    font-weight: 300;
    padding: 6px;
    border: 1px solid #ccc;
    border-radius: 2px;
    outline: none;
  }
  .form-control:hover {
    border-color: var(--primary-color);
  }
  .form-submit {
    background-color: var(--primary-color);
    color: var(--white-color);
    border-radius: 4px;
    border: 1px solid var(--primary-color);
    font-size: 1.2rem;
    font-weight: 600;
    text-align: center;
    width: 100%;
    margin: 20px 0 10px;
    padding: 10px;
    cursor: pointer;
  }
  .form-submit:hover {
    background-color: var(--background-color-hover);
  }
  .form-other {
    background-color: var(--white-color);
    color: var(--primary-color);
    border-radius: 4px;
    border: 1px solid var(--primary-color);
    font-size: 1.2rem;
    font-weight: 600;
    text-align: center;
    width: 100%;
    padding: 10px;
    cursor: pointer;
  }
  .form-other:hover {
    background-color: var(--background-color-hover);
    color: var(--white-color);
  }
  /* Header */
  .header {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 2.5rem;
    background-color: var(--background-color);
    height: 6rem;
  }
  .header-item {
    display: flex;
    justify-content: space-around;
    flex-direction: row;
    width: 20vw;
    height: 35px;
    min-width: 15vw;
    font-size: 1.5rem;
    margin: 7px;
  }
  .header-item:first-child {
    padding: 0;
    margin: 0;
  }
  .header-item h4 {
    padding: 7px 0;
    font-size: 2rem;
  }
  .header-item a {
    color: var(--black-color);
    text-decoration: none;
  }

  .header-img {
    width: 140px;
    height: 50px;
    padding: 4px 15px;
  }
  .sign-out {
    background-color: var(--primary-color);
    border-radius: 4px;
    border: 1px solid var(--primary-color);
    text-align: center;
    width: 100px;
    height: 30px;
    padding: 8px auto 10px;
    cursor: pointer;
  }
  .sign-out a {
    color: var(--white-color);
    font-size: 1.2rem;
    font-weight: 600;
  }
  .sign-out:hover {
    background-color: var(--background-color-hover);
  }

  /* Menu */
  #container {
    display: flex;
    justify-content: space-between;
  }
  .menu {
    width: 16vw;
    height: 90vh;
    background-color: var(--background-color);
    padding-top: 1.2rem;
  }
  .menu-item {
    width: 100%;
    height: 50px;
    padding: 15px 30px 15px 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
  }
  .menu-item a {
    padding: 1rem 3rem;
    text-decoration: none;
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--black-color);
  }

  .menu-item:hover {
    background-color: #ddd;
  }

  /* content */
  #content {
    width: 83vw;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin: 0 0 25px 15px;
  }
  .content-container {
    margin: 15px 0;
  }
  .content-header {
    width: 100%;
    height: 16px;
    display: flex;
    flex-direction: row;
    text-align: center;
    font-size: 18px;
    margin: 15px 5px 25px;
  }
  .content-header h4 {
    margin: 0 10px;
  }
  /* Inbox + Outbox */
  .message {
    width: 100%;
    border-collapse: collapse;
  }
  .message-row {
    height: 85px;
    font-size: 12px;
    font-weight: 600;
    padding: 10px 5px;
  }

  .message-row:hover {
    background-color: #ddd;
  }
  .message-row td {
    border-bottom: 1px solid #ddd;
    margin: 20px 0;
  }
  .message-row:first-child {
    border-top: 1px solid #ddd;
    margin: 20px 0;
  }
  .message-row td:first-child {
    padding-left: 5px;
  }
  .message-row td:nth-child(2) {
    width: 12%;
  }
  .message-row td:nth-child(3) {
    width: 75%;
  }
  .message-row td:last-child {
    text-align: center;
  }
  .message-subject {
    text-decoration: none;
    color: var(--black-color);
  }

  .message-row p {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: 400;
  }
  #delete {
    background-color: var(--primary-color);
    color: var(--white-color);
    border-radius: 4px;
    border: 1px solid var(--primary-color);
    font-size: 14px;
    font-weight: 600;
    text-align: center;
    width: 80px;
    height: 30px;
    padding: 5px;
    cursor: pointer;
  }
  /* Compose */
  .compose-container {
    height: 90vh;
  }
  .compose-container .form {
    width: 50vw;
    height: 500px;
    max-height: 800px;
    margin-right: 40px;
    margin-top: 40px;
    bottom: 0;
  }

  .form textarea {
    height: 150px;
  }
  /* pagination */
  .contain-pagination {
    display: flex;
    justify-content: center;
    margin: 30px 0;
  }
  .pagination {
    display: inline-block;
  }

  .pagination a {
    color: black;
    font-size: 1.2rem;
    float: left;
    padding: 8px 16px;
    text-decoration: none;
    transition: background-color 0.3s;
    border: 1px solid #ddd;
    margin: 0 4px;
  }
  /* after clicking */
  .pagination a.active {
    background-color: var(--primary-color);
    color: white;
    border: 1px solid var(--primary-color);
  }

  .pagination a:hover:not(.active) {
    background-color: #ddd;
  }
  /* Footer */
  footer {
    background-color: var(--background-color);
    height: 40px;
    display: flex;
    bottom: 0;
    justify-content: center;
    position: fixed;
    bottom: 0;
    width: 100%;
    margin-top: 15px;
  }
  footer p {
    font-size: 1.5rem;
    padding: 1.2rem 0;
  }
  /* detail */
  #detail {
    width: 100%;
    margin: 30px 50px;
    font-size: 16px;
    line-height: 30px;
  }
  .detail-heading {
    margin: 20px 0;
    text-align: center;
  }
  .detail-user {
    display: flex;
  }
  .detail-user h4 {
    margin-right: 10px;
  }
  .detail-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 15px 0;
  }
</style>
